<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Amics.Vistas.MainPage"
             Title="Pagina de Inicio Acceso Dni"
             Padding="20">
    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <Label 
            Text="Bievenido a la Falla Amics de Naquera"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry Placeholder="Introduce tu DNI"
               x:Name="DniEntry"
               Keyboard="Text"
               WidthRequest="250"/>
        <Button Text="Aceptar"
                Clicked="AceptarDni_Clicked"/>
    </VerticalStackLayout>
    
</ContentPage>