<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App_Amics.Vistas.Login"
             Title="Login"
             Padding="20">
    <Grid>

        <VerticalStackLayout Margin="20,150,20,0" VerticalOptions="Center" HorizontalOptions="Center">

            <Entry Placeholder="Contraseña"
                   PlaceholderColor="Black"
                   TextColor="Black"
                   BackgroundColor="White"
                   Margin="5"
                   x:Name="contraseñaEntry"/>

            <HorizontalStackLayout>
                <Button Text="Aceptar"
                        Margin="10,30,0,0"
                        Clicked="Aceptar_Clicked"/>
                <Button Text="Registrarse"
                        Margin="10,30,0,0"
                        Clicked="Registrarse_Clicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>

    </Grid>
</ContentPage>